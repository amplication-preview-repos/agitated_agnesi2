datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Comment {
  author    String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  post      Post?    @relation(fields: [postId], references: [id])
  postId    String?
  text      String?
  updatedAt DateTime @updatedAt
}

model Follow {
  createdAt DateTime @default(now())
  follower  String?
  following String?
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Post {
  author    String?
  comments  Comment[]
  content   String?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  imageUrl  Json?
  likes     Like[]
  updatedAt DateTime  @updatedAt
}

model Like {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  post      Post?    @relation(fields: [postId], references: [id])
  postId    String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  likes     Like[]
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
